<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    android:focusable="true" android:focusableInTouchMode="true" >

     <EditText
        android:id="@+id/training_edit_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/training_edit_name"
        android:inputType="text" />
     
     <EditText
        android:id="@+id/training_alias"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/training_alias"
        android:inputType="text" />
     
     <EditText
        android:id="@+id/training_duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/training_duration"
        android:inputType="numberDecimal" />

 
</LinearLayout>
